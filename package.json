{
  "name": "boring-router-packages",
  "private": true,
  "scripts": {
    "link-global": "yarn workspace boring-router link && yarn workspace boring-router-react link",
    "lerna:publish": "lerna publish prerelease --registry=https://registry.npmjs.org",
    "build": "rimraf packages/*/{bld,.bld-cache} && tsc --build tsconfig.json",
    "test:boring-router": "yarn workspace boring-router test",
    "lint": "run-in-every eslint-project --echo --parallel -- eslint --config {configFileName} .",
    "lint-prettier": "prettier --list-different \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "yarn lint-prettier && yarn build && yarn lint && yarn test:boring-router"
  },
  "devDependencies": {
    "@magicspace/configs": "0.2.5",
    "@magicspace/eslint-plugin": "^0.1.26",
    "@types/react": "^16.9.41",
    "eslint": "^7.3.1",
    "lerna": "^3.22.1",
    "mobx": "^5.15.4",
    "mobx-react": "^6.2.2",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "rimraf": "^3.0.2",
    "run-in-every": "^0.1.3",
    "tslib": "^2.0.0",
    "typescript": "^3.9.5"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
